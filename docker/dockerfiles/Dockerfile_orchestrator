FROM opnfv/functest:base
MAINTAINER Jose Lausuch <jose.lausuch@ericsson.com>
LABEL version="4.0" description="OPNFV Functest Docker orchestrator"

# Packaged dependencies
apt-get install docker --no-install-recommends

RUN pip install -r ${repos_dir}/functest/docker/requirements/ochestrator.pip
